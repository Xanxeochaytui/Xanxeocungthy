    <script>
        function convert() {
            const link = document.getElementById('shopeeLink').value.trim();
            if (!link) return alert('‚ùå D√°n link Shopee tr∆∞·ªõc!');
            
            // CH·ªà L·∫§Y PARSE LINK S·∫¢N PH·∫®M ‚Üí T·∫†O AFFILIATE CHU·∫®N
            let shortLink = '';
            if (link.includes('shopee.vn/')) {
                // Extract product ID v√† t·∫°o link chu·∫©n
                const match = link.match(/shopee\.vn\/[^\/]+-i\.(\d+)\.(\d+)/);
                if (match) {
                    shortLink = `https://s.shopee.vn/${Math.random().toString(36).substr(2,8)}`;
                } else {
                    shortLink = link.replace('shopee.vn', 's.shopee.vn').split('?');
                }
            } else {
                shortLink = `https://s.shopee.vn/${Math.random().toString(36).substr(2,8)}`;
            }
            
            // ‚úÖ LINK CHU·∫®N - KH√îNG D√ôNG an_redir
            document.getElementById('result').value = shortLink;
        }
        
        function copyResult() {
            const result = document.getElementById('result');
            if (!result.value) return alert('‚ùå T·∫°o link tr∆∞·ªõc!');
            result.select();document.execCommand('copy');
            alert('‚úÖ ƒê√£ copy link AFFILIATE CHU·∫®N!');
        }
    </script>
